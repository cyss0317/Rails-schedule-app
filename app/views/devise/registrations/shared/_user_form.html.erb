<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <form class="space-y-6" action="#" method=<%= method %>>
    <%= render partial: "shared/text_field", locals: { form: f, label: "first_name" , field: "first_name"  } %>
    <%= render partial: "shared/text_field", locals: { form: f, label: "middle_name", field: "middle_name" } %>
    <%= render partial: "shared/text_field", locals: { form: f, label: "last_name", field: "last_name" } %>
    <%# render partial: "shared/color_field", locals: { form: f, label: "color", field: "color" } %>

    <%= render partial: "shared/email_field", locals: { form: f } if method == "POST" %>

    <%= render partial: "shared/password_field", locals: { form: f, label: "password", field: "password"  } %>
    <%= render partial: "shared/password_field", locals: { form: f, label: "password_confirmation", field: "password_confirmation"  } %>
    <%= render partial: "shared/password_field", locals: { form: f, label: "current_password", field: "current_password"  } if method == "PUT" %>

    <div class="flex items-center justify-content-evenly">
          <%= render partial: "shared/button", locals: { display_text: method == "POST" ? "Sign Up" : "Update" } %>
          <%= render partial: "shared/cancel_button" %>
    </div>
    <%# f.hidden_field :location_id, value: params[:location_id]  %>
    <%= f.hidden_field :color, value: assigned_color %>
  </form>
</div>