<% type ||= "submit" %>
<% classes ||= [] %>
<% method ||= :get %>
<%# bg_class = method == "DELETE" ?  "bg-red-500" : "bg-indigo-600" %>
<% bg_class = method == :delete ? "bg-red-600 hover:bg-red-500" : "bg-indigo-600 hover:bg-indigo-500" %>
<% class_name = "flex w-full justify-center rounded-md #{bg_class} m-1 mt-3 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 #{classes.join(' ')}" %>
<% link ||= "" %>

<% if link.present? %>
  <%= button_to display_text, link, method: method, class: class_name %>
<% else %>
    <button type="<%= type %>" class="<%= class_name %>" >
      <%= display_text %>
    </button>
<% end %>
