<div class="field m-1">
  <%= form.label label.to_sym %>
  <% if @minimum_password_length && label == "password" %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= form.password_field field.to_sym, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
</div>