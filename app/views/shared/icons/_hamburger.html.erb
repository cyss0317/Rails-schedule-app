<button
  class=" hamburger relative md:hidden inline-flex items-center gap-2 rounded-xl border px-3 py-2"
  aria-controls="company-drawer"
  aria-expanded="false"
>
  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2"/></svg>
  Companies
</button>

<div class="hamburger-background hidden">
  <div id="hamburger-menu" class="">
    <%= yield %>
    <%= button_to "Edit Profile", edit_user_registration_path, method: :get %>
    <% if Rails.env.development?  %>
      <%= button_to "SEED Shifts", seed_location_meetings_path, method: :post %>
    <% end %>
    <% if current_user.admin_user? && current == "Week" %>
      <% if @meetings.empty? %>
        <%= button_to "Copy Last Week Shifts", copy_previous_week_schedule_location_meetings_path(location_id: params[:location_id], target_week: @date_range), method: :post, data: { confirm: "Click 'Yes' to continue and copy most recent week's schedule", turbo: false} %>
      <% else %>
        <%= button_to "Clear This Week Shifts", clear_selected_week_location_meetings_path(location_id: params[:location_id], target_week: @date_range), method: :delete, data: { confirm: "Click 'Yes' to continue and delete schdules for this week", turbo: false } %>
      <% end %>
    <% end %>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: {confirm: "are you sure"} %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburgerModalBackground = document.querySelector(".hamburger-background")

    document.querySelector(".hamburger").addEventListener("click", (e) => {
      hamburgerModalBackground.classList.toggle("hidden")
    })
    // TODO: add onKeyDown on ESC to close the modal 9/06/2024
    hamburgerModalBackground.addEventListener("click", (e) => {
      hamburgerModalBackground.classList.toggle("hidden")
    })
    hamburgerModalBackground.addEventListener("on")
    document.querySelector("#hamburger-menu").addEventListener("mouseleave", (e) => {
      hamburgerModalBackground.classList.toggle("hidden")
    })
  })
</script>