<!-- Hamburger Button -->
<div data-controller="drawer">
  <!-- Hamburger Button -->
  <button
    class="hamburger relative inline-flex h-10 w-10 items-center justify-center rounded-xl border bg-white shadow cursor-pointer"
    aria-controls="hamburger-drawer"
    aria-expanded="false"
    data-action="click->drawer#open"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>

<!-- Drawer Root (backdrop + panel) -->
<div
  id="hamburger-drawer"
  class="hidden"
  data-drawer-target="root"
>
  <!-- Backdrop -->
  <div
    class="fixed inset-0 z-40 bg-black/30 opacity-0 transition-opacity"
    data-drawer-target="backdrop"
    data-action="click->drawer#close"
  ></div>

  <!-- Panel -->
  <aside
    class="fixed right-0 top-0 z-50 h-screen w-[88%] max-w-sm translate-x-full bg-white shadow-xl ring-1 ring-black/5 transition-transform md:w-96"
    role="dialog"
    aria-modal="true"
    aria-label="Menu"
    data-drawer-target="panel"
    tabindex="-1"
  >
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-3 border-b">
      <h2 class="text-lg font-semibold">Menu</h2>
      <button class="rounded-lg p-2 hover:bg-gray-100" data-action="click->drawer#close" aria-label="Close">
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none">
          <path d="M6 18L18 6M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="px-4 py-3">
      <!-- Optional profile/brand -->
      <%# Example user badge %>
      <div class="mb-4 flex items-center gap-3 rounded-xl border p-3">
        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center font-semibold text-indigo-700">
          <%= (current_user&.email || 'U')[0].upcase %>
        </div>
        <div>
          <div class="font-medium"><%= current_user&.email %></div>
          <div class="text-xs text-gray-500">Signed in</div>
        </div>
      </div>

      <!-- Nav links -->
      <nav class="space-y-1" aria-label="Main">
        <%= link_to "Home", root_path,
          class: "block rounded-xl px-3 py-2 text-indigo-700 bg-indigo-50 font-medium" %>

        <%= link_to "Edit Profile", edit_user_registration_path,
          class: "block rounded-xl px-3 py-2 hover:bg-gray-50" %>

        <% if Rails.env.development? %>
          <%= button_to "SEED Shifts", seed_location_meetings_path, method: :post,
            class: "block rounded-xl px-3 py-2 hover:bg-gray-50" %>
        <% end %>

        <% if current_user.admin_user? && current == "Week" %>
          <% if @meetings.empty? %>
            <%= button_to "Copy Last Week Shifts",
                  copy_previous_week_schedule_location_meetings_path(location_id: params[:location_id], target_week: @date_range),
                  method: :post,
                  class: "w-full text-left rounded-xl px-3 py-2 hover:bg-gray-50" %>
          <% else %>
            <%= button_to "Clear This Week Shifts",
                  clear_selected_week_location_meetings_path(location_id: params[:location_id], target_week: @date_range),
                  method: :delete,
                  data: { confirm: "Click 'Yes' to clear this week's shifts" },
                  class: "w-full text-left rounded-xl px-3 py-2 hover:bg-gray-50 text-red-600" %>
          <% end %>
        <% end %>

        <%= button_to "Sign Out", destroy_user_session_path,
              method: :delete,
              data: { confirm: "are you sure?" },
              class: "w-full text-left rounded-xl px-3 py-2 hover:bg-gray-50" %>
      </nav>
    </div>


  </aside>
</div>
</div>
