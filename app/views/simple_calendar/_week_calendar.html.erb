<div class="simple-calendar week-calendar">

  <%= render partial: 'shared/calendar_header', locals: { calendar: calendar, start_date: date_range[0], current: "Week"} %>

  <table class="table table-striped">
    <thead>
      <tr class="text-center">
        <th class="table-header-hour"></th>
        <% date_range.slice(0, 7).each do |day| %>
          <th>
            <div class="weekly-date">
              <p><%= "#{t('date.abbr_day_names')[day.wday]}" %></p>
              <%# if day.today? %>
              <%# end %>
              <h4 class="date <%= 'today-date' if day.today? %>"><%= "#{day.mday}" %></h4>
            </div>
          </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr id="weekly">
          <td class="text-center" >
            <div class="time-column">
              <% (8..21).each do |hour| %>
                <div class="time-cell"><%= hour < 12 ? "#{idx_to_time(hour)}AM" : "#{idx_to_time(hour)}PM" %></div>
              <% end %>
            </div>
          </td>

          <% week.each do |day| %>

            <%= content_tag :td, data: { date: day.to_s },class: calendar.td_classes_for(day).push("flex-col")  do %>
              <%# link_to "TEST", new_meeting_path( start_date: day ) %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
              <div class="time-column">
                <% (8..21).each do |time| %>
                  <div class="hour-cell hour-column <%= idx_to_time(time) %>'o-clock" data-time=<% time %> >
                    <% sorted_events.fetch(day, []).each do |event| %>
                      <% if event.shift_belongs_to_hour?(time) %>
                        <%= render partial: "meetings/weekly_meeting", locals: {meeting: event, classes: "weekly-meeting-#{event.id}"} %>
                      <% end %>
                    <% end %>
                 </div>
                <% end %>
              </div>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

