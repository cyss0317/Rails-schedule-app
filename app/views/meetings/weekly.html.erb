

<%= week_calendar(events: @meetings) do |day, day_events| %>
  <p class="text-center"> <%= day.day %> </p>

  <% if !day_events.empty? %>
    <% day_events.each do |event| %>
      <%= render partial: "meetings/custom_meeting", locals: {meeting: event} %>
    <% end %>
  <% end %>
<% end %>

