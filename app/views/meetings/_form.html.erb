<% start_date = params[:start_date].blank? ? DateTime.now : convert_time(params[:start_date]) %>
<%= form_for(@meeting, url: method == :patch ? meeting_path(@meeting) : location_meetings_path(start_date: @start_time), html: { id: "meeting_form", method: method }, class: "contents") do |form| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(meeting.errors.count, "error") %> Prohibited this shift from being saved:</h2>
      <ul>
        <% meeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :employee %>
    <%= form.select :user_id, options_for_select(@users, meeting.user ? meeting.user.id : @users[0]), {}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, value: meeting.start_time || start_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, value: meeting.end_time || start_date + 1.hour, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.hidden_field :location_id, value: params[:location_id] || @meeting.location.id %>
    <%# form.label :end_time %>
    <%# form.time_field :end_time, value: convert_time(start_time).strftime("%Y-%m-%dT%H:%M"), class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
<% end %>
 <div class="mt-6 flex justify-center items-center gap-4">
    <%= button_tag method == :post ? "Create" : "Update",
          type: "submit",
          form: "meeting_form",
          class: "bg-indigo-600 text-white px-3 py-2 rounded-xl shadow" %>

    <%= link_to "Cancel",
          session.delete(:return_to) || request.referer,
          class: "text-indigo-600 hover:text-indigo-700 px-3 py-2" %>

    <% if method == :patch %>
      <%= button_to "Delete",
        meeting_path(@meeting),
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this location?" },
      class: "bg-red-500 text-white px-3 py-2 rounded-xl" %>
    <% end %>
  </div>

<script>
    document.addEventListener("keydown", (e) => {
      if (e.keyCode == 27) {
        history.back();
      }
    })
</script>